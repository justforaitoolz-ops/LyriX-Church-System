{
  "name": "desktop",
  "version": "1.3.2",
  "description": "Church LyriX Desktop Application for lyrics and presentation management",
  "main": "src/main.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/justforaitoolz-ops/LyriX-Church-System.git"
  },
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.13.3",
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.2.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.3.1",
    "electron-updater": "^6.8.3",
    "express": "^5.2.1",
    "firebase": "^12.8.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-qr-code": "^2.0.18",
    "socket.io": "^4.8.3",
    "tailwind-merge": "^3.4.0",
    "wait-on": "^9.0.3"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.lyrix.desktop",
    "productName": "LyriX Church System",
    "files": [
      "src/**/*",
      "renderer_dist/**/*",
      "package.json",
      "public/icon.ico",
      "public/icon.png",
      "public/projector.html",
      "public/remote/**/*"
    ],
    "directories": {
      "output": "release_v2"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "justforaitoolz-ops",
        "repo": "LyriX-Church-System",
        "releaseType": "release"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}